{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Flask",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/pydemo/main.py",
            "env": {
                "FLASK_APP": "app.py",
                "FLASK_ENV": "development"
